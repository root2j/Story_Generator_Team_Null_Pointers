generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Profile {
  id       String @id @default(uuid()) @map("_id")
  userId   String @unique
  name     String
  imageUrl String
  email    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Storyprompt {
  id             String   @id @default(uuid()) @map("_id")
  storypromptId  String
  storyTitle     String
  storyPrompt    String
  storyType      String
  ageGroup       String
  writingStyle   String
  complexity     Int[]
  bookCoverImage String
  chapterImages  String[]
  chapterTexts   String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
